<div class="animated bounceInDown" id="index_logo">
			<img id="logo" src="/assets/parkl_logo.png">
</div>
<button data-toggle="modal" data-target="#newModal" class="btn btn-large btn-primary" id="add_park_button">Add New Park</button>
<%= button_to "Pick-a-Park", random_path, :method => "get", class: "btn btn-large btn-primary", id: "pick_park_button"%>
<%= button_to "Sign Out", sign_out_path, :method => "delete", class: "btn btn-large btn-primary", id: "sign_out_button"%>
<button data-toggle="modal" data-target="#mapModal" class="btn btn-large btn-primary" id="map_button">Map Of Parks</button>
<div class="modal fade modal-lg" id="mapModal">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">Parks Map</h4>
      </div>
      <div class="modal-body">
				<%= render 'park_map' %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<div class="modal fade" id="newModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">Add New Park</h4>
      </div>
      <div class="modal-body">
				<%= render 'new_park' %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<div class="modal fade" id="randomModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">Try This Park Today</h4>
      </div>
      <div class="modal-body">
				<%= render 'new_park' %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<hr/>

<div id="index-wrapper">
	<div id="columns">
		<% @parks.each do |park| %>

			<div class="park">
				<div><strong>Name: </strong><%= park.name %></div>
				<div><strong>Location: </strong><%= park.location %></div>
				<div><strong>Equipment: </strong><%= park.equipment %></div>
				<div><strong>Hours: </strong><%= park.hours %></div>
				<div><strong>Open space: </strong><%= park.open_space %></div>
				<div><strong>Parking lot: </strong><%= park.parking_lot %></div>
				<div><strong>Restrooms: </strong><%= park.restrooms %></div>
				<div><strong>Comments: </strong><%= park.comments %></div>
				<hr/>
				<button data-toggle="modal" data-target="#myModal<%= park.id %>" class="btn btn-primary">Details</button>
			</div>
			<div class="modal fade" id="myModal<%= park.id %>">
			  <div class="modal-dialog">
			    <div class="modal-content">
			      <div class="modal-header">
			        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
			        <h4 class="modal-title"><%= park.name %></h4>
			      </div>
			      <div class="modal-body">
							<div><strong>Location: </strong><%= park.location %></div>
							<div><strong>Equipment: </strong><%= park.equipment %></div>
							<div><strong>Hours: </strong><%= park.hours %></div>
							<div><strong>Open space: </strong><%= park.open_space %></div>
							<div><strong>Parking lot: </strong><%= park.parking_lot %></div>
							<div><strong>Restrooms: </strong><%= park.restrooms %></div>
							<div><strong>Comments: </strong><%= park.comments %></div>
			      </div>
			      <div class="modal-footer">
			      	<div class="mod_foot_button">
			      		<%= button_to "Edit Park", edit_park_path(park), method: :get, class: "btn btn-primary"%>
			      	</div>
			      	<div class="mod_foot_button">
			      		<%= button_to "Delete Park", park, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning"%>
			      	</div>
			        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
			      </div>
			    </div><!-- /.modal-content -->
			  </div><!-- /.modal-dialog -->
			</div><!-- /.modal -->
		<% end %>
	</div>
</div>

