<div id="new_park_form">
	<div class="park_form_content">
		<%= form_for Park.new do |f| %>
			<%= f.label :name %><br/>
			<%= f.text_field :name, :size => 60 %><br/>
			<%= f.label :location %><br/>
			<%= f.text_field :location, :size => 60 %><br/>
			<%= f.label :equipment %><br/>
			<%= f.text_field :equipment, :size => 60 %><br/>
			<%= f.label :hours %><br/>
			<%= f.text_field :hours, :size => 60 %><br/>
			<%= f.label :open_space, "Open Space (small, medium, large)" %><br/>
			<%= f.text_field :open_space, :size => 60 %><br/>
			<%= f.label :parking_lot, "Parking Lot (true or false)" %><br/>
			<%= f.text_field :parking_lot, :size => 60 %><br/>
			<%= f.label :restrooms, "Restrooms (true or false)" %><br/>
			<%= f.text_field :restrooms, :size => 60 %><br/>
			<%= f.label :comments %><br/>
			<%= f.text_area :comments, :cols => "60", :rows => "3" %><br/>
			<%= f.submit class: "btn btn-large btn-primary"%>
			<%= link_to 'Back', parks_path, class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>
