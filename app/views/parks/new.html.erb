<h1>New Park</h1>
<hr/>
<div id="new_park_form">
	<div class="park_form_content">
		<%= form_for(@park) do |f| %>
			<%= f.label :name %><br/>
			<%= f.text_field :name %><br/>
			<%= f.label :location %><br/>
			<%= f.text_field :location %><br/>
			<%= f.label :equipment %><br/>
			<%= f.text_field :equipment %><br/>
			<%= f.label :hours %><br/>
			<%= f.text_field :hours %><br/>
			<%= f.label :open_space %><br/>
			<%= f.text_field :open_space %><br/>
			<%= f.label :parking_lot %><br/>
			<%= f.text_field :parking_lot %><br/>
			<%= f.label :restrooms %><br/>
			<%= f.text_field :restrooms %><br/>
			<%= f.label :comments %><br/>
			<%= f.text_area :comments %><br/>
			<%= f.submit class: "btn btn-large btn-primary"%>
			<%= link_to 'Back', parks_path, class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>
